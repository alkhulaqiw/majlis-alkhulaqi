fetch('api/posts.json')
  .then(response => {
    if (!response.ok) {
      throw new Error('فشل تحميل المنشورات');
    }
    return response.json();
  })
  .then(data => {
    // عرض المنشورات هنا
    displayPosts(data);
  })
  .catch(error => {
    console.error('خطأ:', error);
    document.getElementById('posts-container').innerHTML = `
      <div class="error">
        ⚠️ لا يمكن تحميل المنشورات. تأكد من تشغيل الخادم المحلي.
      </div>
    `;
  });
